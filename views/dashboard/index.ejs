<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | VideoFolio</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background-color: #121212;
      color: #f5f5f5;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }
    
    .navbar {
      background-color: #1a1a1a;
      padding: 10px 0;
    }
    
    .container-fluid {
      max-width: 1200px;
      margin: 0 auto;
    }
    
    h1 {
      font-size: 32px;
      font-weight: 600;
      margin-bottom: 24px;
    }
    
    h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 16px;
      margin-top: 30px;
    }
    
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }
    
    .portfolio-card {
      background-color: #1e1e1e;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .portfolio-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .badge-draft {
      background-color: #6c757d;
      color: white;
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 12px;
    }
    
    .badge-published {
      background-color: #28a745;
      color: white;
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 12px;
    }
    
    /* Button styles matching the image */
    .btn-add-project {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 8px 20px;
      border-radius: 50px;
      font-weight: 500;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0, 123, 255, 0.3);
      transition: all 0.2s ease;
    }
    
    .btn-add-project:hover {
      background-color: #0069d9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 123, 255, 0.4);
    }
    
    .btn-add-project i {
      margin-right: 6px;
    }
    
    .btn-edit-portfolio {
      background-color: transparent;
      color: #007bff;
      border: 1px solid #007bff;
      padding: 8px 20px;
      border-radius: 50px;
      font-weight: 500;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      transition: all 0.2s ease;
      margin-left: 10px;
    }
    
    .btn-edit-portfolio:hover {
      background-color: rgba(0, 123, 255, 0.1);
    }
    
    .btn-edit-portfolio i {
      margin-right: 6px;
    }
    
    .btn-unpublish {
      background-color: #ffc107;
      color: #212529;
      border: none;
      padding: 8px 16px;
      border-radius: 50px;
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .btn-unpublish:hover {
      background-color: #e0a800;
    }
    
    .btn-publish {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 50px;
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .btn-publish:hover {
      background-color: #218838;
    }
    
    .btn-view {
      background-color: #17a2b8;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 50px;
      font-weight: 500;
      text-decoration: none;
      margin-left: 10px;
      transition: all 0.2s ease;
    }
    
    .btn-view:hover {
      background-color: #138496;
    }
    
    .btn-edit {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 6px 16px;
      border-radius: 50px;
      font-size: 14px;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
    }
    
    .btn-edit:hover {
      background-color: #0069d9;
    }
    
    .btn-delete {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 6px 16px;
      border-radius: 50px;
      font-size: 14px;
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .btn-delete:hover {
      background-color: #c82333;
    }
    
    .projects-section {
      margin-top: 20px;
    }
    
    .project-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }
    
    .project-card {
      background-color: #1e1e1e;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    
    .project-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    
    .project-card-body {
      padding: 16px;
    }
    
    .project-card-title {
      margin-bottom: 10px;
      font-size: 18px;
      font-weight: 600;
    }
    
    .project-card-text {
      color: #aaa;
      margin-bottom: 15px;
      font-size: 14px;
    }
    
    .project-card-actions {
      display: flex;
      justify-content: space-between;
    }
    
    .no-projects {
      text-align: center;
      padding: 30px;
      background-color: #1e1e1e;
      border-radius: 12px;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">VideoFolio</a>
      <div>
        <a href="/dashboard" class="btn btn-link text-light">Dashboard</a>
        <a href="/auth/logout" class="btn btn-link text-light">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container-fluid py-4">
    <div class="dashboard-header">
      <h1>Dashboard</h1>
      <div>
        <a href="/projects/add" class="btn-add-project">
          <i class="fas fa-plus"></i> Add Project
        </a>
        <a href="/dashboard/edit-portfolio" class="btn-edit-portfolio">
          <i class="fas fa-edit"></i> Edit Portfolio
        </a>
      </div>
    </div>
    
    <div class="portfolio-card">
      <div class="portfolio-header">
        <div>
          <h2 class="h4 mb-1"><%= portfolio.title %></h2>
          <p class="mb-0">
            Template: <%= portfolio.template.charAt(0).toUpperCase() + portfolio.template.slice(1).replace('-', ' ') %> | 
            Status: <span class="<%= portfolio.isPublished ? 'badge-published' : 'badge-draft' %>">
              <%= portfolio.isPublished ? 'Published' : 'Draft' %>
            </span>
          </p>
        </div>
        <div>
          <form action="/dashboard/toggle-publish?_method=PUT" method="POST" class="d-inline">
            <button type="submit" class="<%= portfolio.isPublished ? 'btn-unpublish' : 'btn-publish' %>">
              <%= portfolio.isPublished ? 'Unpublish' : 'Publish' %>
            </button>
          </form>
          <% if (portfolio.isPublished) { %>
            <a href="/p/<%= portfolio._id %>" target="_blank" class="btn-view">
              <i class="fas fa-external-link-alt"></i> View
            </a>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="projects-section">
      <h2>Your Projects</h2>
      <% if (projects.length === 0) { %>
        <div class="no-projects">
          <p class="mb-2">You haven't added any projects yet.</p>
          <a href="/projects/add" class="btn-add-project">Add your first project</a>
        </div>
      <% } else { %>
        <div class="project-grid">
          <% projects.forEach(project => { %>
            <div class="project-card" data-id="<%= project._id %>">
              <img src="<%= project.thumbnailUrl %>" alt="<%= project.title %>">
              <div class="project-card-body">
                <h5 class="project-card-title"><%= project.title %></h5>
                <p class="project-card-text"><%= project.description.substring(0, 80) %><%= project.description.length > 80 ? '...' : '' %></p>
                <div class="project-card-actions">
                  <a href="/projects/edit/<%= project._id %>" class="btn-edit">Edit</a>
                  <form action="/projects/delete/<%= project._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this project?')">
                    <button type="submit" class="btn-delete">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
</body>
</html>

